<div class="container p-4 mt-5 ">
    <div class="row mt-5">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/resCur" method="post" enctype="multipart/form-data">
                        <h4>Agregar Curso</h4>
                        <div class="form-group mt-3">
                            <h5>Carrera del Curso</h5>
                            <select name="id_carrera" id="">
                                {{#each carreras}}
                                <option value="1">{{n_carrera}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="title" class="form-control" placeholder="Titulo">
                        </div>
                        <div class="form-group mt-3">
                            <h5>Seleccionar Modalidad</h5>
                            <select name="modalidad" id="">
                                <option value="Presencial">Presencial</option>
                                <option value="Virtual">Virtual</option>
                                <option value="Hibrida">Hibrida</option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <textarea name="descripcion" cols="60" rows="2"
                                placeholder="Descripcion del Webinar"></textarea>
                        </div>
                        <div class="form-group mt-3">
                            <h5>Fecha de Inicio</h5>
                            <input type="datetime-local" name="fecha_in" class="form-control" placeholder="Fecha" id="">
                        </div>
                        <div class="form-group mt-3">
                            <h5>Fecha Culminacion del Curso</h5>
                            <input type="datetime-local" name="fecha_fin" class="form-control" placeholder="Fecha"
                                id="">
                        </div>
                        <div class="form-group mt-3">
                            <input type="number" name="costo" min="0.00" max="10000.00" step="0.01" class="form-control" placeholder="costo">
                        </div>
                        <div class="form-group mt-3">
                            <input type="number" name="cupos" class="form-control" placeholder="cupos">
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" name="sitio" class="form-control" placeholder="Sitio o plataforma donde se tendra el Curso">
                        </div>
                        <div class="form-group mt-3">
                            <input type="number" name="duracion" class="form-control" placeholder="Duracion del Curso">
                        </div>
                        <div class="form-group mt-3">
                            <input type="file" name="foto" id="">
                        </div>
                        <div class="form-group mt-3">
                            <input type="url" name="linkRegistro" class="form-control" placeholder="URL de Registro"></input>
                        </div>
                        <div class="form-group mt-3">
                            <h5>Expositor del Webinar</h5>
                            <select name="id_expositor" id="">
                                {{#each expositores}}
                                <option value="{{id_expositor}}">{{apellido}} {{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group mt-3 d-grid">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>