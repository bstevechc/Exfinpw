<div class="container p-4 " >
    <div class="row ">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/add" method="post">
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="tema" placeholder="Tema" autofocus>
                        </div>
                        <div class="form-group mt-3">
                            <input type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group mt-3">
                            <textarea name="description" rows="3" class="form-control" placeholder="Description" cols="30" rows="10"></textarea>
                        </div>
                        <div class="form-group mt-3">
                            <input type="datetime-local" name="fecha" class="form-control" placeholder="Fecha" id="">
                        </div>
                        <div class="form-group mt-3">
                            <h4>Subir foto de Webinar</h4>
                            <input type="submit" value="Subir archivo">
                        </div>
                        <div class="form-group mt-3 d-grid">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                        

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>